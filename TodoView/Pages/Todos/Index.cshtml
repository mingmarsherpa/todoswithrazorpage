@page
@model Todos.IndexModel

@{
    ViewData["Title"] = "Todos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-bold">My Tasks</h1>
        <a asp-page="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-lg"></i> Create New Task
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">@Html.DisplayNameFor(model => model.Todos[0].Title)</th>
                            <th>@Html.DisplayNameFor(model => model.Todos[0].Description)</th>
                            <th class="text-center">Status</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Todos != null && Model.Todos.Any())
                        {
                            @foreach (var item in Model.Todos)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold">@Html.DisplayFor(modelItem => item.Title)</td>
                                    <td class="text-muted">@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td class="text-center">
                                        @if (item.IsDone)
                                        {
                                            <span class="badge rounded-pill bg-success-subtle text-success border border-success">Completed</span>
                                        }
                                        else
                                        {
                                            <span class="badge rounded-pill bg-warning-subtle text-warning-emphasis border border-warning">In Progress</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a>
                                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Details</a>
                                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <p class="mb-0">No tasks found. Time to relax!</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>