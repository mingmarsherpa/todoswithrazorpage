@page
@model Todos.IndexModel

@{
    ViewData["Title"] = "Todos";
}

<p>
    <a asp-page="Create" class="btn btn-primary" mb-2>Create New</a>
</p>
<div class="card shadow">
    <div class="card-header">
        <h1>Todo Items</h1>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover table-responsive">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Todos[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Todos[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Todos[0].IsDone)
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @if (Model.Todos != null && Model.Todos.Any())
            {
                @foreach (var item in Model.Todos) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsDone)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">
                        No Task are there rightnow.

                    </td>
                </tr>
                
            }
            </tbody>
        </table>
    </div>
</div>

