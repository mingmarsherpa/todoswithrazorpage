@page
@model TodoView.Pages.Todos.DetailsModel

@{
    ViewData["Title"] = "Task Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-1 text-dark">Task Details</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a asp-page="./Index" class="text-decoration-none">My Todos</a></li>
                            <li class="breadcrumb-item active">View</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <a asp-page="./Edit" asp-route-id="@Model.Todo.Id" class="btn btn-primary shadow-sm">
                        <i class="bi bi-pencil me-1"></i> Edit Task
                    </a>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header @(Model.Todo.IsDone ? "bg-success" : "bg-warning") py-1 border-0"></div>
                
                <div class="card-body p-4 p-lg-5">
                    <div class="row mb-4">
                        <div class="col-sm-9">
                            <h2 class="fw-bold text-dark mb-2">@Html.DisplayFor(model => model.Todo.Title)</h2>
                            <div class="d-flex align-items-center">
                                @if (Model.Todo.IsDone)
                                {
                                    <span class="badge rounded-pill bg-success-soft text-success border border-success px-3">
                                        <i class="bi bi-check2-circle me-1"></i> Completed
                                    </span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-warning-soft text-dark border border-warning px-3">
                                        <i class="bi bi-hourglass-split me-1"></i> In Progress
                                    </span>
                                }
                            </div>
                        </div>
                    </div>

                    <hr class="text-muted opacity-25" />

                    <div class="row mb-4">
                        <div class="col-12">
                            <label class="text-uppercase text-muted fw-bold small mb-2 d-block">Description</label>
                            <p class="text-secondary fs-5 lh-base">
                                @if (string.IsNullOrWhiteSpace(Model.Todo.Description))
                                {
                                    <em class="text-muted">No description provided for this task.</em>
                                }
                                else
                                {
                                    @Html.DisplayFor(model => model.Todo.Description)
                                }
                            </p>
                        </div>
                    </div>

                    <div class="d-flex pt-3 border-top mt-5 justify-content-between align-items-center">
                        <a asp-page="./Index" class="text-muted text-decoration-none">
                            <i class="bi bi-arrow-left me-1"></i> Return to List
                        </a>
                        <small class="text-muted italic">ID: #@Model.Todo.Id</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Subtle background tints for badges */
    .bg-success-soft { background-color: #e6fcf5; }
    .bg-warning-soft { background-color: #fff9db; }
    
    .card { border-radius: 12px; }
</style>