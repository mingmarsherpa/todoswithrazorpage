@page
@model TodoView.Pages.Todos.EditModel

@{
    ViewData["Title"] = "Edit Task";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="./Index">Tasks</a></li>
                    <li class="breadcrumb-item active">Edit Task</li>
                </ol>
            </nav>

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Edit Todo Item
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Todo.Id" />

                        <div class="mb-3">
                            <label asp-for="Todo.Title" class="form-label fw-bold"></label>
                            <input asp-for="Todo.Title" class="form-control" placeholder="What needs to be done?" />
                            <span asp-validation-for="Todo.Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Todo.Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Todo.Description" class="form-control" rows="3" placeholder="Add some details..."></textarea>
                            <span asp-validation-for="Todo.Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="Todo.IsDone" id="statusSwitch">
                                <label class="form-check-label fw-bold" for="statusSwitch">
                                    Mark as Completed
                                </label>
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-page="./Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-check2-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}